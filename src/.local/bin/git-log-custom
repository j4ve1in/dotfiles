#!/bin/zsh

COMMIT_ID='%C(blue)[%C(reset)%h%C(blue)]%C(reset)'
DATE='%C(blue)[%C(reset)%ad%C(blue)]%C(reset)'
COMMIT_MESSAGE='%s'
REF_NAME='%C(cyan)%d%C(reset)'
AUTHOR_NAME='%C(black bold)%an'

CUSTOM_FORMAT="${COMMIT_ID}$DATE $COMMIT_MESSAGE $REF_NAME $AUTHOR_NAME"

git log --graph --date=short --decorate=short --pretty=format:"$CUSTOM_FORMAT" $*
