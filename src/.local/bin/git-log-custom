#!/bin/zsh

private hash='%C(blue)[%C(reset)%h%C(blue)]%C(reset)'
private date='%C(blue)[%C(reset)%ad%C(blue)]%C(reset)'
private subject='%s'
private ref_name='%C(cyan)%d%C(reset)'
private author_name='%C(black bold)%an'

private custom_format="$hash$date $subject $ref_name $author_name"

git log \
  --graph \
  --date=short \
  --decorate=short \
  --pretty=format:"$custom_format" \
  $*
