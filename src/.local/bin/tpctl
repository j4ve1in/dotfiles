#!/bin/bash

declare name="`xinput list --name-only | grep -i Touchpad`"
case $1 in
  enable )
    killall unclutter
    xinput enable "$name"

    read -r x y < <(xrandr | \
      fgrep '*' | \
      awk '{print $1}' | \
      sed 's/x/ /g'
    )
    xte "mousemove $((x/2)) $((y/2))"
    ;;
  disable )
    unclutter -idle 0 -root -grab &
    xinput disable "$name"
    ;;
esac
