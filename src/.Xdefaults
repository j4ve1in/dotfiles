! urxvt
!! Base
URxvt.title: urxvt
URxvt.termName: rxvt-unicode-256color
URxvt.saveLines: 20000
URxvt.scrollBar: false
URxvt.matcher.button: 1
URxvt.url-launcher: chromium
!! perl-ext
URxvt.perl-ext-common: default,matcher,resize-font,selection,eval
!!! resize-font
URxvt.keysym.C-minus: perl:resize-font:smaller
URxvt.keysym.C-plus:  perl:resize-font:bigger
URxvt.keysym.C-equal: perl:resize-font:reset
URxvt.keysym.C-slash: perl:resize-font:show
!!! eval
URxvt.keysym.C-S-C:  eval:selection_to_clipboard
URxvt.keysym.C-S-V:  eval:paste_clipboard
URxvt.keysym.S-Home: eval:scroll_to_top
URxvt.keysym.S-End:  eval:scroll_to_bottom

!! iso
URxvt.iso14755: false
URxvt.iso14755_52: false

!! Color
URxvt.depth: 32
URxvt.foreground: rgba:ffff/ffff/ffff/ffff
URxvt.background: rgba:0000/0000/0000/eeee
URxvt.cursorColor: blue
URxvt.cursorColor2: white

!! Font
URxvt.font: xft:Migu 1M:size=12:antialias=true, \
            xft:Inconsolata for Powerline:size=12:antialias=true, \
            xft:DejaVu Sans:pixelsize=12:antialias=true
URxvt.boldFont: xft:Migu 1M:bold:size=12:antialias=true, \
                xft:Inconsolata for Powerline:bold:size=12:antialias=true, \
                xft:DejaVu Sans:bold:pixelsize=12:antialias=true

! xterm
!! Basic
XTerm*utf8 : 1
XTerm*locale : true
XTerm*utf8Title: true
XTerm*scrollBar: false
XTerm*metaSendsEscape: true
XTerm*selectToClipboard : true
XTerm*saveLines : 20000
XTerm*geometry : 75x20+300+100

!! Color
XTerm*background : black
XTerm*foreground : white

!! Font
XTerm*cjkWidth : true
XTerm*faceSize : 13
XTerm*faceName : 'Migu 1M'
XTerm*faceNameDoublesize: 'Migu 1M'
