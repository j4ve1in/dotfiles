#!/bin/zsh

if [ "$1" = "16" ]; then
  for code in {00..16}; do
    print -nP -- "%F{$code}$code %f"
    [ "$code" -eq 16 ] && echo
  done
elif [ "$1" = "256" ]; then
  for code in {000..255}; do
    print -nP -- "%F{$code}$code %f"
    [ $((${code} % 16)) -eq 15 ] && echo
  done
else
  echo -e "\e[1;31mError\e[m"
  echo -e "Try 'color 16' or 'color 256'.\n"
fi
