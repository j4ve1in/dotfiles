typeset -gA fg=(
  default ''
  main    '75'
  sub     '240'
  accent  '27'
  success '33'
  error   '196'
)

typeset -gA bg=(
  default ''
  main    '75'
  sub     '240'
  accent  '21'
  success '32'
  error   '196'
)

typeset -gA text=(
  fg '38'
  bg '48'
)

typeset -gA attr=(
  default   '0'
  bold      '1'
  underline '4'
  reverse   '7'
)

