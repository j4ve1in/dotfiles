#! /bin/sh

bspwmstatus | \
  xmobar \
    -d \
    -f 'xft:Noto Sans Mono CJK JP:size=13' \
    -c '[Run Date "%m/%d %T" "date" 10, Run StdinReader]' \
    -t ' %StdinReader% }{ %date% ' &

bspc monitor -d 1 2 3

bspc config border_width  2
bspc config window_gap   12

bspc config normal_border_color   '#00008b'
bspc config active_border_color   '#00008b'
bspc config focused_border_color  '#00008b'
bspc config presel_feedback_color '#00008b'
