# system operations
## make sxhkd reload its configuration files
super + alt + shift + Escape
	pkill -USR1 -x sxhkd && \
		notify-send sxhkd 'Reload configuration file'

## Power Manager
super + alt + shift + p ; {p,r,l,q}
	{systemctl poweroff, systemctl reboot, xautolock -locknow, bspc quit}

## close and kill window
super + {_,shift + }w
	bspc node -{c,k}

## set the window state
super + ctrl + shift + {t,f}
	bspc node -t {tiled,floating}

## focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + ctrl + {j,k}
	bspc node -f {next,prev}.local

## focus or send to the next/previous desktop in the current monitor
super + {alt,ctrl} + shift + {h,l}
	bspc {desktop -f,node -d} {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{0-3}
	bspc {desktop -f,node -d} '{0-3}'

## move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

## add desktop
super + ctrl + shift + n
	bspc query --desktops --names | \
		tail -n 1 | \
		xargs -I \{\} expr \{\} + 1 | \
		xargs -I \{\} bspc monitor --add-desktops \{\}

## remove desktop
super + ctrl + shift + w
	bspc desktop --remove

## Display
super + d
	dmenu-xrandr

## Volume
XF86Audio{Lower,Raise}Volume
	pamixer --{decrease,increase} 1 && \
		paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
	pamixer --toggle-mute && \
		pamixer --get-mute && \
		notify-send pamixer 'Set mute' || \
		notify-send pamixer 'Set unmute'

## Brightness
XF86MonBrightnessUp
	(( `xbacklight -get` < 15.5 )) && xbacklight + 5

XF86MonBrightnessDown
	(( `xbacklight -get` > 5.5  )) && xbacklight - 5

## Screencast
super + ctrl + s
	scrc {start,stop}

super + shift + s
	scrc {start,stop} --select

## Screenshot
Print
	maim -u "$HOME/Pictures/screenshots/`date +'%y-%m-%d_%02k%M%S'`.png"

shift + Print
	maim -u -s -c 0,0,255,1 \
		"$HOME/Pictures/screenshots/`date +'%y-%m-%d_%02k%M%S'`.png"

## Launcher
super + shift + @space
	dmenu_path | dmenu-wrapper -p Launcher | bash

# launch applications
## Terminal
super + ctrl + alt + shift + Return
	alacritty

## Network Manager
super + ctrl + alt + shift + n
	alacritty -e sudo wifi-menu -o

## Password Manager
super + ctrl + alt + shift + p
	dmenu-lpass

## Volume Manager
super + ctrl + alt + shift + v
	alacritty -e alsamixer

## System Activity
super + ctrl + alt + shift + a
	alacritty -e vtop -t abyss

## Browser
super + ctrl + alt + shift + b
	chromium --enable-features=WebUIDarkMode --force-dark-mode

## File Manager
super + ctrl + alt + shift + f
	alacritty -e ranger

## Network Switcher
super + ctrl + alt + shift + n
	dmenu-netctl

## RSS Reader
super + ctrl + alt + shift + r
	alacritty -e feedlish

## Instant Messenger
super + ctrl + alt + shift + i
	slack
