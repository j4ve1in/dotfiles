# system operations
## make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd && \
		notify-send sxhkd 'Reload configuration file'

## quit bspwm normally
super + alt + Escape
	bspc quit

## close and kill window
super + {_,shift + }w
	bspc node -{c,k}

## set the window state
super + ctrl + {t,f}
	bspc node -t {tiled,floating}

## focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + ctrl + {j,k}
	bspc node -f {next,prev}.local

## focus or send to the next/previous desktop in the current monitor
super + ctrl + {_,shift + }{h,l}
	bspc {desktop -f,node -d} {prev,next}.local

## expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

## contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

## move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

## Display
super + ctrl + d
	dmenu-xrandr

## Volume
XF86Audio{Lower,Raise}Volume
	pamixer --{decrease,increase} 1 && \
		paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
	pamixer --toggle-mute && \
		pamixer --get-mute && \
		notify-send pamixer 'Set mute' || \
		notify-send pamixer 'Set unmute'

## Brightness
XF86MonBrightnessUp
	(( `xbacklight -get` < 15.5 )) && xbacklight + 5

XF86MonBrightnessDown
	(( `xbacklight -get` > 5.5  )) && xbacklight - 5

## Touchpad
super + shift + t
	tpctl {enable,disable}

## Screencast
super + ctrl + s
	scrc {start,stop}

super + shift + s
	scrc {start,stop} --select

## Screenshot
Print
	maim -u "$HOME/Pictures/Screenshots/`date +'%y-%m-%d_%02k%M%S'`.png"

shift + Print
	tpctl enable && \
		maim -u -s -c 0,0,255,1 \
			"$HOME/Pictures/Screenshots/`date +'%y-%m-%d_%02k%M%S'`.png" && \
		tpctl disable

# launch applications
## Terminal
super + Return
	termite -e mux-loader

## Calendar
super + c
	chromium --app='https://www.google.com/calendar'

## Launcher
super + shift + @space
	dmenu_path | dmenu-wrapper -p Launcher | bash

## Map
super + ctrl + m
	chromium --app='https://www.google.co.jp/maps'

## Microblogging client
super + shift + m
	chromium --app='https://twitter.com/ytet5uy4/lists/home'

## Network Manager
super + ctrl + n
	termite -e 'sudo wifi-menu -o'

## Password Manager
super + ctrl + p
	dmenu-lpass

super + shift + p
	chromium --app='chrome-extension://hdokiejnpimakedhajhdlcegeplioahd/vault.html'

## Email
super + shift + e
	chromium --app='https://mail.zoho.com'

## Volume Manager
super + shift + v
	termite -e alsamixer

## System Activity
super + a
	termite -e 'vtop -t abyss'

## Browser
super + b
	chromium

super + shift + b
	chromium --incognito

## Instant Messenger
super + i
	dmenu-slack

## Editor
super + e
	termite -e "$EDITOR"

## File Manager
super + f
	urxvt -e 'ranger'

## Network Switcher
super + n
	dmenu-netctl

## Power Manager
super + p ; {p,r,l}
	{systemctl poweroff, systemctl reboot, lock --dpms}

## Translate
super + t
	chromium --app='https://translate.google.com'

## RSS Reader
super + r
	termite -e feedlish

## Video
super + v
	chromium --app='https://www.netflix.com'

