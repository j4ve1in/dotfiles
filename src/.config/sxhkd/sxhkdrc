# system operations
## Restart window manager
super + q
  xmonad-restart

## Reload configuration file
super + Escape
  pkill -USR1 -x sxhkd && \
    notify-send sxhkd 'Reload configuration file'

## Volume
XF86Audio{Lower,Raise}Volume
  pamixer --{decrease,increase} 1 && \
    paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
  pamixer --toggle-mute && \
    pamixer --get-mute && \
    notify-send pamixer 'Set mute' || \
    notify-send pamixer 'Set unmute'

## Brightness
XF86MonBrightnessUp
  (( `xbacklight -get` < 15.5 )) && xbacklight + 5

XF86MonBrightnessDown
  (( `xbacklight -get` > 5.5  )) && xbacklight - 5

## Touchpad
super + shift + t
  tpctl {enable,disable} --notify

## Screen Manager
super + s
  scrm

## Screencast
super + ctrl + s
  scrc {start,stop}

super + shift + s
  scrc {start,stop} --select

## Screenshot
{_,shift + }Print
  scrs {_,--select}

# launch applications
## Terminal
super + Return
  termite -e mux-loader

## Calendar
super + c
  chromium --app='https://www.google.com/calendar'

## Color picker
super + ctrl + c
  gpick --pick

## Launcher
super + ctrl + l
  dmenu_path | dmenu-wrapper -p Launcher | bash

## Map
super + ctrl + m
  chromium --app='https://www.google.co.jp/maps'

## Network Manager
super + ctrl + n
  termite -e 'sudo wifi-menu -o'

## Password Manager
super + ctrl + p
  dmenu-lpass

super + shift + p
  chromium --app='chrome-extension://hdokiejnpimakedhajhdlcegeplioahd/vault.html'

## Email
super + shift + e
  chromium --app='https://inbox.google.com'

super + ctrl + e
  termite -e mutt

## Volume Manager
super + shift + v
  termite -e alsamixer

## System Activity
super + a
  termite -e 'vtop -t abyss'

## Browser
super + b
  chromium

super + shift + b
  chromium --incognito

## Instant Messenger
super + i
  slack-switcher

## Editor
super + e
  termite -e "$EDITOR"

## File Manager
super + f
  urxvt -e 'ranger'

## Music Player
super + m
  termite -e ncmpcpp

## Network Switcher
super + n
  netctl-switcher

## Power Manager
super + p
  dmenu-power

## Web Search
super + w
  dmenu-search

## Translate
super + t
  chromium --app='https://translate.google.com'

## RSS Reader
super + r
  termite -e feedlish

## Video
super + v
  youtube-pl

super + ctrl + v
  chromium --app='https://www.netflix.com'

