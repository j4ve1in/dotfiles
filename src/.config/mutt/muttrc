# smtp
set my_username = `envchain mail/personal printenv SMTP_USERNAME`
set my_pass = `envchain mail/personal printenv SMTP_PASSWORD`
set my_host = `envchain mail/personal printenv SMTP_HOST`
set my_port = `envchain mail/personal printenv SMTP_PORT`

set from = $my_username
set smtp_pass = $my_pass
set smtp_url = smtps://$my_username@$my_host:$my_port

# imap
source $XDG_CONFIG_HOME/mutt/mailboxes
set folder = $HOME/Mail
set spoolfile = +personal/INBOX
set record = +personal/Sent
set postponed = +personal/Drafts

set realname = ytet5uy4
set use_from = yes

set header_cache = $XDG_CACHE_HOME/mutt/
set message_cachedir = $XDG_CACHE_HOME/mutt/

set sort = reverse-date-sent
