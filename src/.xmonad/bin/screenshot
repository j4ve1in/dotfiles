#!/bin/zsh

file=~/Pictures/Screenshots/screenshot_$(date +'%y-%m-%d_%I%M%S').png
if [ -f /tmp/unclutter.pid ]; then
  unclutter-toggle
  [ "$1" = "--select" ] && maim -s "$file" || maim "$file"
  unclutter-toggle
else
  [ "$1" = "--select" ] && maim -s "$file" || maim "$file"
fi
notify-send 'Take a screenshot' "Saved to $file"
