#!/bin/zsh

[ -z "$TOUCHPAD" ] && exit 1
typeset ID
ID=`xinput list | grep $TOUCHPAD | grep -Eo 'id\=[0-9]*' | grep -Eo '[0-9]*'`
declare -i STATE
STATE=`xinput list-props $ID | grep 'Device Enabled' | awk '{print $4}'`
if [ $STATE -eq 1 ]; then
  xinput disable $ID
  notify-send "$TOUCHPAD" "Disabled touchpad"
else
  xinput enable $ID
  notify-send "$TOUCHPAD" "Enabled Touchpad"
fi
