[core]
    attributesfile = ~/.gitattributes.global
    excludesfile = ~/.gitignore.global
    editor = vim
    pager = less
    quotepath = off

[color]
    ui = true

[color "diff"]
    meta = white bold
    frag = cyan
    old = red
    new = green

[push]
    default = simple

[help]
    autocorrect = 30

[include]
    path = ~/.gitconfig.aliases
    path = ~/.gitconfig.local
