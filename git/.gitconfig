[alias]
    ad = add
    br = branch
    co = checkout
    col = config -l
    cl = clone
    ft = fetch
    me = merge
    med = merge -d
    rank = "shortlog -s -n --no-merges"
    r = "shortlog -s -n --no-merges"
    ra = remote add
    rs = reset
    sh = show
    so = remote show origin
    st = status
    ta = tag
    tad = tag -d
    # commit
    ci = commit
    ca = commit --amend
    # log
    lo = log --oneline
    lp = log -p
    ls = log --stat
    history = log --graph --date=short --decorate=short --pretty=format:'%C(blue)[%C(reset)%h%C(blue)]%C(reset)%C(blue)[%C(reset)%ad%C(blue)]%C(reset) %C(reset)%s %C(cyan)%d%C(reset) %C(black bold)%an'
    hi = log --graph --date=short --decorate=short --pretty=format:'%C(blue)[%C(reset)%h%C(blue)]%C(reset)%C(blue)[%C(reset)%ad%C(blue)]%C(reset) %C(reset)%s %C(cyan)%d%C(reset) %C(black bold)%an'
    # diff
    di = diff
    dc = diff --cached

[color]
    ui = true

[core]
    attributesfile = ~/.gitattributes.global
    excludesfile = ~/.gitignore.global
    editor = vim
    pager = less
    quotepath = off

[include]
    path = ~/.local.d/.gitconfig.local

[url "https://github.com/"]
    pushinsteadof = "git://github.com/"
    pushinsteadof = "git@github.com:"
