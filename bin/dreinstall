#!/bin/zsh

. dbase

printf "Are you sure you want to continue (yes/no)? "
read -s -n 1 ANSWER; echo -e '\n'

case $ANSWER in
  "Y" | "y" )
    # Uninstall
    duninstall -y

    clear

    # Install
    if has curl; then
      bash <(curl -L d.ytet5uy4.com) -y
    elif has wget; then
      bash <(wget -O - d.ytet5uy4.com) -y
    fi
    ;;
  * ) exit 0 ;;
esac
